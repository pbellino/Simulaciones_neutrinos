\section{contribución de los fotones del Cf}

\begin{frame}{Fotones emitidos por la fuente de $^{252}$Cf}
    \begin{itemize}
        \item Por cada fisión espontánea se emiten: $\bar{\nu}_n = 3.7$ y $\bar{\nu}_p = 8.3$
        \item Espectro de fisión (Watt) para neutrones ($\bar E \approx 2MeV$)
        \item Se asume una fuente sin quemado
    \end{itemize}
    \begin{columns}[t]
        \begin{column}{0.5\textwidth}
            \begin{center}
                \vspace{-3em}
            \includegraphics[width=8cm]{espectros_fuenteCf_LLNL.png}\\
            \end{center}
        \end{column}
        \begin{column}{0.5\textwidth}
            Algunas preguntas:
            \begin{itemize}
                \item ¿Cuánto influyen estos fotones en el detector?
                \item Por otro lado, los neutrones generan fotones al interactuar con el resto de los materiales
                \item ¿Qué contribución de fotones es más importante?
            \end{itemize}
        \end{column}
    \end{columns}
\end{frame}

\section{Conclusiones}

\begin{frame}{Algunas respuestas}
   \begin{itemize}
       \item Se hicieron dos simulaciones (con MCNP), con y sin los fotones de la fuente
       \item Se muestra la energía depositada en Si por los fotones
   \end{itemize}
   \begin{center}
       \includegraphics[width=10.5cm]{espectros_photons_from_Cf.png}\\
   \end{center}
\end{frame}

\begin{frame}{Pasos a seguir}
        \begin{itemize}
            \item Agregar la contribución del fondo (altas energías)
            \item Incorporar bibliotecas para modelar interacciones a bajas energías
            \item Realizar una simulación más detallada en MCNP
            \item Agregar fuente de fotones en PHITS
            \item Optimizar la paralelización en MCNP
        \end{itemize}
\end{frame}


