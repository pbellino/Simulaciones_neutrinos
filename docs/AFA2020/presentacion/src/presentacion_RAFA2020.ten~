\begin{frame}[plain]
\titlepage
\end{frame}

\section{Intruducción}

\begin{frame}{ \textbf{$\nu$IOLETA}: \large{\textbf{n}eutrino \textbf{I}nteraction \textbf{O}bservation with a \textbf{L}ow \textbf{E}nergy \textbf{T}hreshold \textbf{A}rray }}
    \begin{block}<+->{Modelo}
        \begin{itemize}
          \item<+-> Experimento para medir neutrinos producidos en un reactor nuclear
          \item<+-> Propiedades determinadas a partir de interacciones neutrino-electron y neutrino-núcleo
          \item<+-> Es un esfuerzo colaborativo entre varias intituciones y paises
          \item<+-> A corto plazo se instalará un experimento en la Central Nuclear Atucha-II
          \item<+-> De particular interés resulta la Interacción Elástica Coherente neutrino-Núcleo (CE$\nu$NS)
          \item<+-> Se utilizarán sensores CCD con tecnología Skipper
          %\item<+-> Estos poseen umbrales de detección de 15 eV$ (4 e$^-$) y ruido de lectura subelectrónico
          %\item<+-> Detección de electrones individuales desde 0 a 100000 e$^¿$
        \end{itemize}
    \end{block}
\end{frame}

\begin{frame}{¿Qué pueden simular PHITS y MCNP6?}
    \begin{center}
        \includegraphics[height=6cm]{energy_range_mcnp.png}
    \end{center}

    Tanto PHITS como MCNP simulan fotones y electrones hasta 1keV (simulación actual). 
    Con MCNP6 se puede bajar hasta 1eV (fotones) y 10eV (electrones).
\end{frame}

\section{Objetivos}

\begin{frame}{Experimento realizado}
    \begin{columns}[t]
        \begin{column}{0.5\textwidth}
            \vspace{-2em}
        \begin{center}
          \includegraphics[height=7cm]{Foto_shield_frontal.jpg}
        \end{center}
        \end{column}
        \begin{column}{0.6\textwidth}
            \vspace{5em}
            \begin{itemize}
                \item Detector de silicio (9cm x 3cm x 675$\mu$m)
                \item Dos bloques de cobre rodeando al detector, como blindaje (12" x 8" x 2")
                \item Dewar de acero inoxidable ($\phi$=10", e=0.7cm)
            \end{itemize}
        \end{column}
    \end{columns}
\end{frame}

\begin{frame}{Experimento realizado}
    \begin{columns}[t]
        \begin{column}{0.6\textwidth}
        \begin{center}
        \vspace{-2em}
          \includegraphics[width=8cm]{Foto_shield_lateral.jpg}
        \end{center}
        \end{column}
        \begin{column}{0.5\textwidth}
            \hspace{1em}
            \vspace{2em}
            \begin{itemize}
                \item Blindaje de plomo (3cm)
                \item Fuente de fisiones espontáneas de $^{252}$Cf (1.2$\mu$Ci) debajo del plomo 
                \item Plomo como blindaje para los gammas producidos por la fuente
            \end{itemize}
        \end{column}
    \end{columns}
\end{frame}


